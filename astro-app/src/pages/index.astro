  <div class="mx-auto h-full w-full antialiased">
    <div class="relative h-[400px] w-full md:h-[700px]">
      <img
        src={bg.src}
        class="absolute inset-x-0 top-0 -z-20 mx-auto h-full w-full object-cover invert dark:invert-0"
        alt="bg"
